{
    "Disks": [
        {
            "PartitionTableType": "gpt",
            "TargetDisk":
            {
            	"Type": "path",
            	"Value": "/dev/sda"
            },
            "Partitions": [
                {
                    "ID": "boot",
                    "Flags": [
                        "grub"
                    ],
                    "Start": 1,
                    "End": 9,
                    "FsType": "fat32"
                },
                {
                    "ID": "rootfs",
                    "Start": 9,
                    "End": 0,
                    "FsType": "ext4"
                }
            ]
        }
    ],
    "SystemConfigs": [
        {
            "IsDefault": true,
	    "BootType": "legacy",
            "Hostname": "cbl-mariner",
